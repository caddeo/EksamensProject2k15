@model IEnumerable<VejleSygehus2.Models.Article>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>


    @if (Request.IsAuthenticated && User.IsInRole("canEdit"))
    {
        <p>
            @Html.ActionLink("Create New", "Create", "Admin")
        </p>
    }


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Header)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @if (Request.IsAuthenticated && User.IsInRole("canEdit"))
            {
                Html.ActionLink("Edit", "Edit", "Admin", new {id = item.Id});
                
                Html.ActionLink("Delete", "Delete", "Admin", new {id = item.Id});
            }

            @Html.ActionLink("Læs", "Details", new {id = item.Id})
        </td>
    </tr>
}

</table>
